<div class="jumbotron bg-muted text-center">
    <div class="d-block">

        <h1 class="display-4 text-white-shadow align-middle">
            Looking for a web developer job too?
        </h1>

    </div>
    <hr class="my-4">
    <h3 class="">Well here's a list! Lets see what we found.</h3>
    <form class="create-form">
        <div class="form-group">
            <a class="btn btn-primary" href="/" role="button">Home</a>
            <a class="btn btn-primary" href="/saved" role="button">Saved Jobs</a>
            <button id="scrapeJob" class="btn btn-primary" type="submit">Scrape Job Listing</button>
            <button id="deleteList" class="btn btn-primary" type="submit">Clear Job Listing</button>
        </div>
    </form>
</div>


<div class="container">
    <div class="card card-body">
        <h3>Job Listing</h3>
        <hr>
        {{#unless Jobs}}
            <div class="card card-body">
                <h3>Sorry nothing listed try scraping or saving.</h3>
            </div>
        {{/unless}}
        {{#each Jobs}}
            {{> Query/query-block}}
        {{/each}}
    </div>
</div>

<div id="modalNote" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="modalTitle" class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="modalNoteText">Notes:</label>
                <textarea class="form-control" id="modalNoteText" rows="3"></textarea>
            </div>
        </div>
      <div class="modal-footer">
        <button id="btnSaveNote" type="button" class="btn btn-primary">Save notes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div id="modalSaved" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="modalSavedTitle" class="modal-title">Saving Job...</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label id="modalSavedText" for="modalSavedText">Job saved.</label>
            </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div id="modalDeleteAll" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="modalDeleteTitle" class="modal-title">Deleting jobs...</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label id="modalDeleteText" for="modalDeleteText">Job listing has been cleared, excluding saved jobs.</label>
            </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>