<div class="card card-body">

    <div class="row">
        <div class="col-12">
            <a class="border-bottom" href="{{link}}">
                {{title}}
            </a>
            <div class="float-right">
                {{#if saved}}
                <button class="btn btn-primary mx-1 hvr-sweep-to-right addNote" type="submit" data-id="{{_id}}">Add Note</button>
                <button class="btn btn-danger mx-1 hvr-sweep-to-right deleteJob" type="submit" data-id="{{_id}}">Delete Job</button>

                {{else}}
                <button class="btn btn-primary mx-1 hvr-sweep-to-right saveJob" type="submit" data-id="{{_id}}">Save Job</button>
                {{/if}}

            </div>
        </div>

        <div class="col-12">
            <span>{{company}}, {{location}}</span>
        </div>
    </div>
</div>
